<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.GrabJob" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:colorPrimary">@color/brand_primary</item>
        <item name="android:colorPrimaryDark">@color/brand_dark</item>
        <item name="android:colorAccent">@color/gradient_start</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/brand_primary</item>
        <item name="android:navigationBarColor">@color/brand_primary</item>
        <item name="android:fontFamily">@font/roboto</item>
